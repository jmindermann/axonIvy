<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
  version="2.2">
  <factory>
    <external-context-factory>ch.ivyteam.ivy.dialog.execution.jsf.controller.IvyExternalContextFactory</external-context-factory>
    <application-factory>ch.ivyteam.ivy.dialog.execution.jsf.controller.IvyApplicationFactory</application-factory>
    <exception-handler-factory>ch.ivyteam.ivy.dialog.execution.jsf.error.RuntimeLogExceptionHandlerFactory</exception-handler-factory>
    <facelet-cache-factory>ch.ivyteam.ivy.dialog.execution.jsf.controller.IvyFaceletCacheFactory</facelet-cache-factory>
  </factory>

  <application>
    <resource-handler>ch.ivyteam.ivy.dialog.execution.jsf.controller.resource.IvyResourceHandler</resource-handler>
    <state-manager>ch.ivyteam.ivy.dialog.execution.jsf.controller.IvyStateManager</state-manager>
  </application>

  <component>
    <component-type>IvyComponent</component-type>
    <component-class>ch.ivyteam.ivy.dialog.execution.jsf.component.IvyCompositeComponent</component-class>
  </component>

  <managed-bean>
    <managed-bean-name>ivy</managed-bean-name>
    <managed-bean-class>ch.ivyteam.ivy.environment.IvyJsf</managed-bean-class>
    <managed-bean-scope>application</managed-bean-scope>
  </managed-bean>
  
  <managed-bean>
    <managed-bean-name>errorPage</managed-bean-name>
    <managed-bean-class>ch.ivyteam.ivy.webserver.ErrorPageMBean</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>
  
  <managed-bean>
    <managed-bean-name>unavailablePage</managed-bean-name>
    <managed-bean-class>ch.ivyteam.ivy.webserver.EngineUnvailablePageMBean</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>
  
  <!-- override standard converter for tag <f:convertDateTime> -->
  <converter>
    <converter-id>javax.faces.DateTime</converter-id>
    <converter-class>ch.ivyteam.ivy.dialog.execution.jsf.controller.converter.IvyOverrideDateTimeConverter</converter-class>
  </converter>
</faces-config>
